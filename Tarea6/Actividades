 5.
 #include <iostream>
 #include <math.h>
 using namespace std;
void main(){
  float arista;
  
  cout << "Escribe la longitud de la arista del cubo: ";
  cin >> arista;
  
  float volumen;
volumen = arista * arista *arista;
  
  cout << "El volumen del cubo es " << volumen << endl;
}

6.
#include <iostream>
#include <math.h>

void main(){
  float a = 5.6;
  float b = 8.4;
  float c;
  
  c = round(a); // a) 6
  c = round(b); // b) 8
  
  c = floor(b); // c) 8
  c = ceil(b); // d) 9
}

7.
#include <iostream>

void main(){
  bool a = 8 <= 8;
  bool b = 4 != 5;
  bool c;
  
  c = a && a; // a) 1
  c = a || a; // b) 1
  
  c = a && b; // c) 1
  c = b || a; // d) 1
}

8.
#include <iostream>
#include <string>
using namespace std;

void main(){
  string s = "Feliz navidad";
  
  int a = 0;
  int b = 5;
  int c = 8;
  
  cout << s[a] << s[b] << s[c];
}
